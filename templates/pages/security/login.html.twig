{% extends 'base.html.twig' %}

{% block title %}Marwa Dashboard Connexion!{% endblock %}

{% block body %}
 <div class='container'>
 <h1 class='mt-4'>Formulaire de connexion </h1>
 <form action="{{ path('security.login')}}" method="POST">
    <div class="form-group">
      <label for="username" class="form-label mt-4">Adresse email</label>
      <input type="email" class="form-control" id="username" name="_username"  placeholder="marwa@gmail.com">
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Password</label>
      <input type="text" class="form-control" id="password" name="_password" placeholder="marwa1234">
    </div>
    <button type="submit" class="btn btn-primary mt-4"> Se connecter</button>
 </form>
 </div>
{% endblock %}
